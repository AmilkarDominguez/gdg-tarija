---
import "@styles/base.css";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<link
		rel="icon"
		type="image/svg+xml"
		href="favicon.ico"
	  />
		<meta name="description" content="GDG Tarija" />
		<meta property="og:image" content=>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="scroll-smooth">
		<slot />
	</body>
</html>
